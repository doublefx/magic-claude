#!/bin/bash
# Git Hook: post-rebase
# Logs rebases with SHAs for git-sync agent impact analysis

BEFORE=$(git rev-parse ORIG_HEAD 2>/dev/null)
AFTER=$(git rev-parse HEAD 2>/dev/null)

echo "[git-sync] Rebase complete. The git-sync agent will analyze impact."

LOG_FILE=".git/serena-sync-reminder.log"
echo "$(date -u '+%Y-%m-%d %H:%M:%S UTC') - post-rebase before=${BEFORE} after=${AFTER}" >> "$LOG_FILE"
