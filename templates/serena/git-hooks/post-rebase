#!/bin/bash
# Git Hook: post-rebase
# Logs rebases for /git-sync change impact analysis

echo "[git-sync] External changes detected after rebase. Run /git-sync to analyze impact."

# Log for later processing
LOG_FILE=".git/serena-sync-reminder.log"
echo "$(date -u '+%Y-%m-%d %H:%M:%S UTC') - post-rebase" >> "$LOG_FILE"
