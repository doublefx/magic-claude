#!/bin/bash
# Serena Git Hook: post-rebase
# Reminds to sync memories after rebase

echo "[Serena] External changes detected after rebase."
echo "         Run /git-sync to update memories."

# Log for later processing
LOG_FILE=".git/serena-sync-reminder.log"
echo "$(date -u '+%Y-%m-%d %H:%M:%S UTC') - post-rebase" >> "$LOG_FILE"
