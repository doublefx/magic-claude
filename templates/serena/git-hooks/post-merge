#!/bin/bash
# Git Hook: post-merge
# Logs merges/pulls for /git-sync change impact analysis

echo "[git-sync] External changes detected after merge. Run /git-sync to analyze impact."

# Log for later processing
LOG_FILE=".git/serena-sync-reminder.log"
echo "$(date -u '+%Y-%m-%d %H:%M:%S UTC') - post-merge" >> "$LOG_FILE"
